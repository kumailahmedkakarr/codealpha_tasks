from scapy.all import sniff, IP, TCP, UDP

def packet_callback(packet):
    if IP in packet:
        ip_src = packet[IP].src
        ip_dst = packet[IP].dst
        proto = packet[IP].proto

        print(f"Source IP: {ip_src} --> Destination IP: {ip_dst} | Protocol: {proto}")

        if TCP in packet:
            print("TCP | Src Port:", packet[TCP].sport, "| Dst Port:", packet[TCP].dport)
        elif UDP in packet:
            print("UDP | Src Port:", packet[UDP].sport, "| Dst Port:", packet[UDP].dport)

# Start sniffing (Press Ctrl+C to stop)
sniff(prn=packet_callback, store=False)
